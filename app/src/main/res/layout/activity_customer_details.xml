<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CustomerDetailsActivity">


    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter the Customer Details Below"
        android:textSize="19dp"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/name"
        android:hint="Customer Full Name"
        android:textSize="24dp"
        android:layout_below="@+id/texttitle"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/email"
        android:hint=" Customer Email"
        android:textSize="24dp"
        android:layout_below="@+id/name"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

      <EditText
        android:id="@+id/balance"
        android:hint="Customer  Balance"
        android:textSize="24dp"
        android:layout_below="@+id/email"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

      <EditText
        android:id="@+id/contact"
        android:hint="Contact Number "
        android:textSize="24dp"
        android:layout_below="@+id/balance"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnInsert"
        android:textSize="19dp"
        android:text="New Customer Details Inserted "
        android:layout_marginTop="10dp"
        android:layout_below="@id/contact"/>

     <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:textSize="19dp"
        android:text="Update Customer Details  "
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnInsert"/>

      <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:textSize="19dp"
        android:text="Delete Customer Details"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnUpdate"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnView"
        android:textSize="19dp"
        android:text="View All CUstomer's Details"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnDelete"/>






</RelativeLayout>